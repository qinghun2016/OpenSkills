{
  "name": "openskills",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev -w packages/api",
    "dev:web": "npm run dev -w packages/web",
    "sync-icons": "npm run sync-icons -w packages/extension",
    "build": "npm run sync-icons && npm run build -w packages/api && npm run build -w packages/web",
    "test": "npm run test -w packages/api",
    "ext:compile": "npm run compile -w packages/extension",
    "ext:package": "npm run compile -w packages/extension && npm run package -w packages/extension",
    "ext:package:install": "npm run package:install -w packages/extension",
    "pack": "npm run ext:package",
    "pack:install": "npm run ext:package:install"
  },
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "concurrently": "^8.2.0"
  }
}
