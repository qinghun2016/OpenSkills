/**
 * Decisions Router
 * Handles /api/decisions endpoints
 */

import { Router, Request, Response } from 'express';
import * as decisionService from '../services/decisionService';
import {
  DecisionCreateInput,
  DecisionQueryParams,
} from '../types';

const router = Router();

/**
 * GET /api/decisions
 * List all decisions
 * Query params: limit
 */
router.get('/', async (req: Request, res: Response) => {
  try {
    const params: DecisionQueryParams = {};

    if (req.query.limit) {
      params.limit = parseInt(req.query.limit as string, 10);
    }
    if (req.query.search) {
      params.search = req.query.search as string;
    }

    const result = await decisionService.listDecisions(params);
    res.json(result);
  } catch (err) {
    res.status(500).json({
      success: false,
      error: 'Internal server error',
    });
  }
});

/**
 * GET /api/decisions/:proposalId
 * Get a decision by proposal ID
 */
router.get('/:proposalId', async (req: Request, res: Response) => {
  try {
    const { proposalId } = req.params;
    const decision = await decisionService.getDecisionByProposalId(proposalId);

    if (!decision) {
      return res.status(404).json({
        success: false,
        error: 'Decision not found',
      });
    }

    res.json({
      success: true,
      data: decision,
    });
  } catch (err) {
    res.status(500).json({
      success: false,
      error: 'Internal server error',
    });
  }
});

/**
 * POST /api/decisions
 * Create a new decision
 */
router.post('/', async (req: Request, res: Response) => {
  try {
    const input: DecisionCreateInput = req.body;

    // Basic validation
    if (!input.proposalId || !input.decision || !input.reason || !input.decidedBy) {
      return res.status(400).json({
        success: false,
        error: 'Missing required fields: proposalId, decision, reason, decidedBy',
      });
    }

    // Validate decision value
    if (!['approve', 'reject'].includes(input.decision)) {
      return res.status(400).json({
        success: false,
        error: 'Invalid decision. Must be "approve" or "reject"',
      });
    }

    // Validate decidedBy value
    if (!['agent', 'human'].includes(input.decidedBy)) {
      return res.status(400).json({
        success: false,
        error: 'Invalid decidedBy. Must be "agent" or "human"',
      });
    }

    const result = await decisionService.createDecision(input);

    if (!result.success) {
      return res.status(400).json(result);
    }

    res.status(201).json(result);
  } catch (err) {
    res.status(500).json({
      success: false,
      error: 'Internal server error',
    });
  }
});

/**
 * POST /api/decisions/:proposalId/apply
 * Apply an approved decision's diff to the skill file
 */
router.post('/:proposalId/apply', async (req: Request, res: Response) => {
  try {
    const { proposalId } = req.params;

    const result = await decisionService.applyDecision(proposalId);

    if (!result.success) {
      return res.status(400).json(result);
    }

    res.json(result);
  } catch (err) {
    res.status(500).json({
      success: false,
      error: 'Internal server error',
    });
  }
});

/**
 * GET /api/decisions/:proposalId/validate
 * Validate that a diff can be applied
 */
router.get('/:proposalId/validate', async (req: Request, res: Response) => {
  try {
    const { proposalId } = req.params;

    const result = await decisionService.validateDiffBeforeDecision(proposalId);
    res.json({
      success: true,
      data: result,
    });
  } catch (err) {
    res.status(500).json({
      success: false,
      error: 'Internal server error',
    });
  }
});

/**
 * GET /api/decisions/:proposalId/preview
 * Preview what the skill will look like after applying
 */
router.get('/:proposalId/preview', async (req: Request, res: Response) => {
  try {
    const { proposalId } = req.params;

    const result = await decisionService.previewDecisionApplication(proposalId);
    
    if (!result.success) {
      return res.status(400).json({
        success: false,
        error: result.error,
      });
    }

    res.json({
      success: true,
      data: { preview: result.preview },
    });
  } catch (err) {
    res.status(500).json({
      success: false,
      error: 'Internal server error',
    });
  }
});

/**
 * GET /api/decisions/stats
 * Get decision statistics
 */
router.get('/stats/summary', async (_req: Request, res: Response) => {
  try {
    const stats = await decisionService.getDecisionStats();
    res.json({
      success: true,
      data: stats,
    });
  } catch (err) {
    res.status(500).json({
      success: false,
      error: 'Internal server error',
    });
  }
});

export default router;
