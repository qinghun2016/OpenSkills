{
  "name": "@openskills/api",
  "version": "0.1.0",
  "description": "OpenSkills REST API server - proposals/decisions/history CRUD with diff support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "cross-env OPENSKILLS_WORKSPACE=../../ ts-node --transpile-only src/index.ts",
    "dev:watch": "cross-env OPENSKILLS_WORKSPACE=../../ ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "cross-env OPENSKILLS_WORKSPACE=../../ node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "@octokit/rest": "^20.0.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "cors": "^2.8.5",
    "diff": "^5.2.0",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/diff": "^5.0.9",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
